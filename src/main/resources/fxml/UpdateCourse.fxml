<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ecms.dbms.controllers.UpdateCourseController"
            prefWidth="400" prefHeight="300" style="-fx-padding:20;">
    <VBox spacing="10">
        <Label text="Update Course" style="-fx-font-size:18; -fx-font-weight:bold;"/>

        <TextField fx:id="txtCourseName" promptText="Course Name"/>
        <TextField fx:id="txtCategory" promptText="Category"/>
        <TextField fx:id="txtDuration" promptText="Duration (hours)"/>
        <TextField fx:id="txtPrice" promptText="Price"/>

        <HBox spacing="10">
            <Button fx:id="btnSave" text="Save" onAction="#handleSave" />
            <Button fx:id="btnCancel" text="Cancel" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>
